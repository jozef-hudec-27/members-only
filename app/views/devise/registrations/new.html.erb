<h2 class="main-page-heading">Sign up</h2>

<div class="sign-up-form-wrapper" data-turbo="false">
    <div style="display: flex; flex-direction: column; align-items: flex-end;">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'john.doe@example.com', required: '' %>
            </div>

            <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: 'new-password', required: '', placeholder: '••••••••' %>
            </div>

            <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: 'new-password', required: '', placeholder: '••••••••' %>
            </div>

            <div class="actions">
                <%= f.submit 'Sign up' %>
            </div>
        <% end %>

        <%= link_to 'Already have an account?', new_user_session_path, data: { turbo: true } %>
    </div>
</div>

<%= render 'devise/shared/error_messages', resource: resource %>