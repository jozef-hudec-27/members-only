<% if post.errors.any? %>
    <div class="form-errors">
        <ul>
            <% post.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
        </ul>
    </div>
<% end%>

<%= form_with model: post do |form| %>
    <%= form.label :title, 'Title:' %>
    <%= form.text_field :title, placeholder: 'My best story ever!' %>

    <br /><br />

    <%= form.label :body, 'Body:' %>
    <%= form.text_area :body, placeholder: 'Your story needs to be at least 250 characters.' %>

    <br /><br />

    <%= form.submit %>
<% end %>